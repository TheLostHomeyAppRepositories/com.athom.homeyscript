{
  "templates": {
    "default": {
      "outputSourceFiles": false
    }
  },
  "opts": {
    "mainpagetitle": "HomeyScript",
    "template": "./node_modules/homey-jsdoc-template",
    "simpleAnalyticsHost": "sa.athom.com",
    "destination": "./build"
  },
  "source": {
    "include": [
      "./docs/README.md",
      "./docs/api.js"
    ]
  },
  "plugins": [
    "plugins/markdown"
  ]
}